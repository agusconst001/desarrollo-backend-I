<h1>Productos en Vivo</h1>
<ul id="products-live">
    {{#each products}}
        <li data-id="{{this.id}}">{{this.title}} - ${{this.price}} <button onclick="removeProduct('{{this.id}}')">Borrar</button></li>
    {{/each}}
</ul>
<form id="add-product-form">
    <input type="text" name="title" placeholder="Nombre" required>
    <input type="number" name="price" placeholder="Precio" required>
    <button type="submit">Agregar</button>
</form>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/liveProducts.js"></script>